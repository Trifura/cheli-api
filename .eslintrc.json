{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
	"plugins": ["@typescript-eslint"],
	"extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
		"plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
        "package-lock.json",
        "node_modules/*",
        "dist/*"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
		"@typescript-eslint/no-unused-vars": "error"
    }
}
